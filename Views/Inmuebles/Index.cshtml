@model IEnumerable<CamargoInmobiliaria.Inmueble>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Inmuebles</h1>

<p>
    <a asp-action="Create">Nuevo Inmueble</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ambientes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Superficie)
            </th>    
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPropietario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ambientes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Superficie)
            </td>          
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uso)
            </td>
            <td>
                @(item.Propietario.Email)
            </td>

            <td>
                @Html.ActionLink("Editar", "Edit", new {  id=item.InmuebleId}) |
                @Html.ActionLink("Detalles", "Details", new {  id=item.InmuebleId  }) |
                @Html.ActionLink("Eliminar", "Delete", new {  id=item.InmuebleId }) 
            </td>
        </tr>
}
    </tbody>
</table>
